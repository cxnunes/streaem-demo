{
    "compilerOptions": {
        "target": "es2018",
        "module": "commonjs",
        "strict": true,
        "esModuleInterop": true,
        "declaration": true,
        "jsx": "react",
        "moduleResolution": "node",
        "lib": ["dom", "esnext"],
        "sourceMap": true,
        "paths": {
            "@/*": ["./*"]
        }
    },
    "exclude": ["node_modules"],
    "include": ["./src"]
}
